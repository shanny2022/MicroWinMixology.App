<Page
    x:Class="MicroWinMixology.App.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MicroWinMixology.App.Views"
    xmlns:models="using:MicroWinMixology.App.Models"
    xmlns:home="using:MicroWinMixology.App.Presentation.Home">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Hero / Title -->
        <StackPanel Grid.Row="0" Padding="24">
            <TextBlock Text="MicroWin Mixology"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="0,0,0,4"/>
            <TextBlock Text="Pick a shot of progress"
                       FontSize="16"
                       Opacity="0.8"/>
        </StackPanel>

        <!-- Category Chips -->
        <ScrollViewer Grid.Row="1"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Disabled"
                      Margin="0,8,0,8">
            <StackPanel Orientation="Horizontal" Padding="24,0">
                <!-- We'll bind these later; for now, simple buttons -->
                <Button Content="Focus" Margin="0,0,8,0"/>
                <Button Content="Calm" Margin="0,0,8,0"/>
                <Button Content="Social" Margin="0,0,8,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Main content: Featured + Category drinks -->
        <ScrollViewer Grid.Row="2">
            <StackPanel Padding="24" Spacing="16">
                <!-- Featured Drinks -->
                <StackPanel>
                    <TextBlock Text="Featured"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <ItemsControl x:Name="FeaturedDrinksList">
                        <!-- We'll style item template later -->
                    </ItemsControl>
                </StackPanel>

                <!-- Category Drinks -->
                <StackPanel>
                    <TextBlock Text="For your mood"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Margin="0,16,0,8"/>
                    <ItemsControl x:Name="CategoryDrinksList">
                        <!-- We'll style item template later -->
                    </ItemsControl>
                </StackPanel>

                <!-- Suggested Tasks -->
                <StackPanel>
                    <TextBlock Text="Today’s micro tasks"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Margin="0,16,0,8"/>
                    <ItemsControl x:Name="SuggestedTasksList">
                        <!-- We'll bind tasks here -->
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Status / Error at bottom -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    Padding="24"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Spacing="12">
            <ProgressRing x:Name="BusyRing" Width="24" Height="24" Visibility="Collapsed"/>
            <TextBlock x:Name="ErrorText"
                       Text=""
                       Foreground="Red"
                       TextWrapping="Wrap"
                       Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Page>
