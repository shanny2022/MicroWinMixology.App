<Page
    x:Class="MicroWinMixology.App.Presentation.Home.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utu="using:Uno.Toolkit.UI"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!-- Top bar / header -->
    <Border
        Grid.Row="0"
        Padding="16,12"
        Background="{ThemeResource SystemControlAcrylicWindowBrush}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <Ellipse Width="32" Height="32" Fill="{ThemeResource SystemAccentColor}" />
                <StackPanel>
                    <TextBlock
                        Text="MicroWin Mixology Bar"
                        FontSize="20"
                        FontWeight="SemiBold" />
                    <TextBlock
                        Text="Tiny rituals. Big focus."
                        Opacity="0.7"
                        FontSize="12" />
                </StackPanel>
            </StackPanel>

            <StackPanel
                Grid.Column="2"
                Orientation="Horizontal"
                Spacing="8"
                VerticalAlignment="Center">
                <Button Content="Today" />
                <Button Content="History" />
            </StackPanel>
        </Grid>
    </Border>

    <!-- Main content scroll -->
    <ScrollViewer Grid.Row="1">
        <StackPanel Spacing="24" Margin="24,16,24,24">

            <!-- Hero section -->
            <Border
                CornerRadius="24"
                Padding="20"
                Margin="0,0,0,8">
                <StackPanel Spacing="8">
                    <TextBlock
                        Text="What do you need in the next 5 minutes?"
                        FontSize="22"
                        FontWeight="SemiBold" />
                    <TextBlock
                        Text="Pick a vibe and we’ll serve a tiny ritual plus a micro-task to match."
                        TextWrapping="Wrap"
                        Opacity="0.8" />
                </StackPanel>
            </Border>

            <!-- Category chips -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Focus" />
                <Button Content="Calm" />
                <Button Content="Social" />
            </StackPanel>

            <!-- Featured drinks -->
            <StackPanel Spacing="12">
                <TextBlock
                    Text="Featured micro rituals"
                    FontSize="18"
                    FontWeight="SemiBold" />

                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <!-- Card 1 -->
                        <utu:Card Width="260" Padding="16">
                            <StackPanel Spacing="6">
                                <TextBlock
                                    Text="Deep Focus Nitro"
                                    FontSize="18"
                                    FontWeight="SemiBold" />
                                <TextBlock
                                    Text="Reset your brain in 5 minutes with a focus sprint + breathing."
                                    TextWrapping="Wrap"
                                    Opacity="0.8" />
                                <TextBlock
                                    Text="Focus • 5 min • Intensity 3/3"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Opacity="0.9" />
                                <Button
                                    Content="Start ritual"
                                    HorizontalAlignment="Left"
                                    Margin="0,4,0,0" />
                            </StackPanel>
                        </utu:Card>

                        <!-- Card 2 -->
                        <utu:Card Width="260" Padding="16">
                            <StackPanel Spacing="6">
                                <TextBlock
                                    Text="Calm Cocoa Reset"
                                    FontSize="18"
                                    FontWeight="SemiBold" />
                                <TextBlock
                                    Text="Release tension with soft breathing and a 3-step journaling prompt."
                                    TextWrapping="Wrap"
                                    Opacity="0.8" />
                                <TextBlock
                                    Text="Calm • 7 min • Intensity 1/3"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Opacity="0.9" />
                                <Button
                                    Content="Start ritual"
                                    HorizontalAlignment="Left"
                                    Margin="0,4,0,0" />
                            </StackPanel>
                        </utu:Card>

                        <!-- Card 3 -->
                        <utu:Card Width="260" Padding="16">
                            <StackPanel Spacing="6">
                                <TextBlock
                                    Text="Social Espresso Shot"
                                    FontSize="18"
                                    FontWeight="SemiBold" />
                                <TextBlock
                                    Text="Send love, engage, and schedule a tiny catch-up in 3 steps."
                                    TextWrapping="Wrap"
                                    Opacity="0.8" />
                                <TextBlock
                                    Text="Social • 3 min • Intensity 2/3"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Opacity="0.9" />
                                <Button
                                    Content="Start ritual"
                                    HorizontalAlignment="Left"
                                    Margin="0,4,0,0" />
                            </StackPanel>
                        </utu:Card>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>

            <!-- Micro tasks section -->
            <StackPanel Spacing="12">
                <TextBlock
                    Text="Today’s micro tasks"
                    FontSize="18"
                    FontWeight="SemiBold" />

                <StackPanel Spacing="8">
                    <utu:Card Padding="12">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <StackPanel Width="0" HorizontalAlignment="Stretch" Margin="0,0,8,0">
                                <TextBlock
                                    Text="Inbox sweep in three sips"
                                    FontWeight="SemiBold" />
                                <TextBlock
                                    Text="Answer three important messages while you sip your drink."
                                    TextWrapping="Wrap"
                                    Opacity="0.8" />
                            </StackPanel>
                            <Button Content="Start" />
                        </StackPanel>
                    </utu:Card>

                    <utu:Card Padding="12">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <StackPanel Width="0" HorizontalAlignment="Stretch" Margin="0,0,8,0">
                                <TextBlock
                                    Text="One tiny admin win"
                                    FontWeight="SemiBold" />
                                <TextBlock
                                    Text="Pick a single paperwork or finance task and finish it during this ritual."
                                    TextWrapping="Wrap"
                                    Opacity="0.8" />
                            </StackPanel>
                            <Button Content="Start" />
                        </StackPanel>
                    </utu:Card>
                </StackPanel>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Grid>

</Page>
