using System.Collections.Generic;

namespace MicroWinMixology.App.Models
{
    public class MicroWinDrink
    {
        public string Id { get; set; }           // Unique ID for the drink / ritual
        public string Name { get; set; }         // Drink/ritual name, e.g. "Deep Focus Nitro"
        public string Tagline { get; set; }      // Short description, e.g. "Reset in 5 minutes"
        public string Category { get; set; }     // e.g. "Focus", "Calm", "Social"
        public int Intensity { get; set; }       // 1-3, how intense/energizing it is
        public int DurationMinutes { get; set; } // Approx ritual length
        public string ImageName { get; set; }    // Name/path of the image resource for this drink
        public List<MicroWinStep> Steps { get; set; } = new List<MicroWinStep>();
    }

    public class MicroWinStep
    {
        public int StepNumber { get; set; }      // 1, 2, 3...
        public string Title { get; set; }        // Short label like "Set a timer"
        public string Instruction { get; set; }  // A sentence or two about what to do
    }

    public class MicroWinTask
    {
        public int Id { get; set; }              // ID from the JSONPlaceholder API
        public string Title { get; set; }        // Task text
        public bool Completed { get; set; }      // Completed or not
        public string Source { get; set; }       // e.g. "JSONPlaceholder"
    }
}
